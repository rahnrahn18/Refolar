<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Toolbar -->
    <LinearLayout
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end">

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_aperture"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:contentDescription="Settings" />
    </LinearLayout>

    <!-- Filter List (Hidden by default) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@drawable/gradient_overlay"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_controls"/>

    <!-- Bottom Controls Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_overlay"
        android:paddingBottom="32dp"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Portrait Mode Controls (Slider) -->
        <LinearLayout
            android:id="@+id/aperture_control_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_shutter">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f/"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <com.google.android.material.slider.Slider
                android:id="@+id/aperture_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="0.0"
                android:valueTo="10.0"
                android:value="5.0"
                app:thumbColor="@color/colorPrimary"
                app:trackColorActive="@color/colorPrimary"
                app:trackColorInactive="@color/colorControlNormal" />

            <TextView
                android:id="@+id/aperture_value_text"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="2.8"
                android:textColor="@android:color/white"
                android:gravity="end" />
        </LinearLayout>

        <!-- Gallery Button -->
        <ImageButton
            android:id="@+id/btn_gallery"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_gallery"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_shutter"
            app:layout_constraintTop_toTopOf="@+id/btn_shutter"
            app:layout_constraintBottom_toBottomOf="@+id/btn_shutter" />

        <!-- Shutter Button -->
        <ImageButton
            android:id="@+id/btn_shutter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_shutter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Switch Camera Button -->
        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_switch_camera"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toEndOf="@+id/btn_shutter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_shutter"
            app:layout_constraintBottom_toBottomOf="@+id/btn_shutter" />

        <!-- Portrait Toggle Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_portrait_toggle"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portrait"
            app:icon="@drawable/ic_aperture"
            app:backgroundTint="@color/colorSurface"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_gallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_filter_toggle"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="8dp"/>

        <!-- Filter Toggle Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_filter_toggle"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            app:icon="@drawable/ic_gallery"
            app:backgroundTint="@color/colorSurface"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_gallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_portrait_toggle"
            android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Controls Container (Bottom) -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Aperture Slider (Hidden by default) -->
        <LinearLayout
            android:id="@+id/aperture_control_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_aperture"
                app:tint="@color/colorOnSurface"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/aperture_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="0.0"
                android:valueTo="10.0"
                android:value="5.0"
                app:thumbColor="@color/colorPrimary"
                app:trackColorActive="@color/colorPrimary"
                app:trackColorInactive="@color/colorControlNormal"/>

            <TextView
                android:id="@+id/aperture_value_text"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="f/2.8"
                android:textColor="@color/colorOnSurface"
                android:layout_marginStart="8dp"
                android:gravity="end"/>

        </LinearLayout>

        <!-- Portrait Toggle -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_portrait_toggle"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Portrait"
            app:icon="@drawable/ic_aperture"
            app:backgroundTint="@color/colorSurface"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
